              <input type="file" class="form-control" name="avatar">
              <!-- <input type="hidden" name="info" value="iduser"> -->
              <input type='submit' value='Upload!' />
            </form>
  </div>
</div>
           <!-- edit form column -->
           <div class="col-md-9 personal-info">
             <div class="alert alert-info alert-dismissable">
               <a class="panel-close close" data-dismiss="alert">Ã—</a>
               <i class="fa fa-coffee"></i>
               Welcome back <strong> <%=user.name%></strong>, what do you want to change?
             </div>
             <h3>Personal info</h3>
 <!-- ************* Form Edit Profile ********** -->
             <form action="/SaveChange" method="post" class="form-horizontal" role="form">
               <div class="form-group">
                 <label class="col-lg-3 control-label">Username:</label>
                 <div class="col-lg-8">
                   <input name="name" class="form-control" type="text" value= "<%=user.name%>">
                 </div>
               </div>


               <div class="form-group">
                 <label class="col-lg-3 control-label">Email:</label>
                 <div class="col-lg-8">
                   <input name="email" class="form-control" type="text" value="<%=user.email%>">
                 </div>
               </div>

               <div class="form-group">
                 <label class="col-md-3 control-label">Password:</label>
                 <div class="col-md-8">
                   <input name="password"class="form-control" type="password" value="<%=user.password%>">
                 </div>
               </div>
               <div class="form-group">
                 <label class="col-md-3 control-label">Confirm password:</label>
                 <div class="col-md-8">
                   <input name="confirm" class="form-control" type="password" value="<%=user.password%>">
                 </div>
               </div>

               <div class="form-group">
                 <label class="col-md-3 control-label">Your Job:</label>
                 <div class="col-md-8">
                  <textarea name="job" class="form-control" rows="3" placeholder="your job"><%=user.job%></textarea>
                 </div>
               </div>
               <div class="form-group">
                 <label class="col-md-3 control-label">Your Bio:</label>
                 <div class="col-md-8">
                  <textarea name="bio" maxlength="250" class="form-control" rows="3" placeholder="your bio"><%=user.bio%></textarea>
                 </div>
               </div>




               <div class="form-group">
                 <label class="col-md-3 control-label"></label>
                 <div class="col-md-8">
                   <input type="submit" class="btn btn-primary" value="Save Changes">
                   <span></span>
                   <a class="btn btn-secondary" href="/profile">Cancel</a>
                 </div>
               </div>
             </form>
           </div>
