     	<div class="row">
           <!-- left column -->
           <div class="col-md-3">
             <div class="text-center">
            <form ref='uploadForm' id='uploadForm' action='/upload' method='post' encType="multipart/form-data">
              <img src="./images/<%=user._id%>.png" class="avatar img-circle" alt="avatar">
