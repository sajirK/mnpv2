    <!-- Portfolio Grid Section -->

    <section class="portfolio" id="portfolio">
      <div class="container">


        <h2 class="text-center text-uppercase text-secondary mb-0">New ads :</h2>
        <hr class="star-dark mb-5">
        <div class="row">
          <div class="col-9">
            <h3 id="Compteur" style="margin-left: 95px"  class="text-secondary mb-0"><%=dataAd.length%> ads online</h3>
          </div>
          <%
          if (IsLog == true) {
            %>
          <div class="col-3">
            <a class="btn btn-dark" style="margin-right: 90px" href="/postAds">Post a new add +</a>
            </div>
            <%}%>
          </div>
          <div class="row" id="searchBar">
    <div class="offset-1 col-4 padding-left" >
             <form class="form" action="/search" method="post">
             <input type="text" name="search" class="btn btn-outline-dark" value="" placeholder="Search ads">
             <button type="submit" class="btn btn-dark" name="btnSearch">Search</button>
          </form>
    </div>
      </div>
        <%
  for(var i=0; i < dataAd.length; i++) {
  %>
        <div class="row">
          <div class="offset-1 col-10">
            <div class="card text-center">
              <div class="card-header">
                <div class="row">
                <div class="col-3">
                  Crypto currency
                </div>
                <div class="col-3">
                  Number of seats
                </div>
                <div class="col-3">
                  ROI
                </div>
                <div class="col-3">
                  MN Worth
                </div>
                </div>
              </div>
              <div class="card-header">
                <div class="row">
                <div class="col-3">
                  <%=dataAd[i].crypto%>
                </div>
                <div class="col-3">
                  <%=dataAd[i].NbSeat%>
                </div>
                <div class="col-3">
                  120%
                </div>
                <div class="col-3">
                  <%=dataAd[i].cryptoP*1600%>$

                </div>
                </div>
              </div>
              <div class="card-body">
                  <img class="avatarAd" src="./images/<%=dataAd[i].posterId%>.png">
                  <a href="/cardAds?id=<%=dataAd[i]._id%>">
                <h5 class="card-title"><%=dataAd[i].title%></h5>
              </a>
                <p class="card-text"><%=dataAd[i].message%></p>
                <%
                if (IsLog == true) {
                  %>
                <a href="/sendReq.id=<%=dataAd[i]._id%>" class="btn btn-primary">Reserve</a>
                <%}%>
              </div>
              
              <div class="card-footer text-muted">
                Posted by <strong> <%=dataAd[i].posterName%> </strong> at <%=dataAd[i].dateAnnonce%>
              </div>
            </div>
          </div>
          </div>
         <%}%>
                  </div>


                  </section>

